<div
  class="toast w-full h-full fixed inset-0 z-20 pointer-events-none transition-transform ease-in-out hide"
>
  <div
    style="--type: --t"
    class={`max-w-72 rounded-lg px-4 py-3 text-_step2 absolute bottom-2 right-2 z-50
    bg-gray-500`}
  >
    <span class="toastContent">a</span>
  </div>
</div>

<style>
  .hide {
    transform: translateY(100%);
  }
</style>

<script type="module">
  function handleShowToast(event) {
    // Buscar elementos dentro del contexto actual
    const $toastContent = document.querySelector("span.toastContent");
    const $toast = document.querySelector("div.toast");
    
    if (!$toast || !$toastContent) {
      console.log('Toast elements not found');
      return;
    }

    const { content = "", type = "info" } = event?.detail || {};
    $toastContent.textContent = content;
    $toast.classList.remove("hide");

    setTimeout(() => {
      if ($toast) { // Verificar que a√∫n existe
        $toast.classList.add('hide');
      }
    }, 3000);
  }

  // Remover listener anterior si existe
  window.removeEventListener("show-toast", handleShowToast);
  // Agregar nuevo listener
  window.addEventListener("show-toast", handleShowToast);

</script>
