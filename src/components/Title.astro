---
interface Props {
  title: string
  className?: string
}

const { title = '', className = '' } = Astro.props

---

<h2 class={`${className} w-fit border-b-4 border-white text-step2 mb-4 font-semibold`}>
  {title}
</h2>

<style>
  h2 {
    position: relative;
  }
  h2::before {
    content:"";
    position: absolute;
    width: 0;
    height: 4px;
    background-color: var(--color-section);
    bottom: -4px;
    left: 0;    

    transition: width .3s ease-in-out;
  }

  h2:hover::before {
    width: 100%;
  }

</style>