---
interface Props {
  section: string;
  tag: string;
  className?: string;
}

const { section, tag, className = '' } = Astro.props;
---

<section 
  style={`--color-section: var(--color-${section});`}
  class={`${section} ${className}`}
>
  <span class="tag">
    {tag}
  </span>
  <slot />
</section>

<style>
  section {
    border: 1px solid var(--color-section);
    padding: 2rem 1rem;
    position: relative;
    box-shadow: 0 0 20px var(--color-section);
  }
  .tag {
    font-size: var(--step-0);
    position: absolute;
    top: -1rem;
    left: 3rem;
    background-color: #2c2c2c;
    mix-blend-mode: ;
    padding-inline: 2rem;
  }
  .tag::before {
    content: '<';
  }
  .tag::after {
    content: '>';
  }
</style>
